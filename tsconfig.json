{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@page/*": [
        "src/views/*"
      ],
      "@cpt/*": [
        "src/components/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "alwaysStrict": false,  
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}